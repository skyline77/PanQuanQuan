.versus-flex {
  display: flex;
  /* padding: 15px 10px 15px 10px; */
  margin: 15px auto;
}


.flex-text {
  flex: 0 0 2em;
  padding: 0 10px;

}

.flex-input {
  flex: 1 0 4em;
  text-align: center;
  border-bottom: solid 1px #eee;
}

.team-input {
  text-align: center;
}





.input {
  border-bottom: solid 1px #eee;
  margin-right: 1em;
}


.progress-box {
  display: flex;
  padding: 15px 10px 15px 10px;
}

.total-score-left {
  flex: 0 0 2em;
  color: #555;
  margin: 0 20px 0 20px;
}

.total-score-right {
  flex: 0 0 2em;
  color: #777;
  font-size: 14px;
  margin-left: 15px;
}

.total-score-mid {
  flex: 1 0 0;
}

.submit-button {
  background-color: #6F63FF;
  margin: 20px 0 40px;
  color: white;
}
