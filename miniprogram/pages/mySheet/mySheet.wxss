/* miniprogram/pages/mySheet/mySheet.wxss */

.body {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;

}

navigator {
  overflow: hidden;
}

.list {
  margin-bottom: 20rpx;
  height: 200rpx;
  position: relative;
}

.list-item {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid gray;
}

.imgs {
  float: left;
}

.imgs image {
  display: block;
  width: 200rpx;
  height: 200rpx;
  padding-top: 15rpx;
  padding-left: 15rpx;
}

.infos {
  float: left;
  width: 480rpx;
  height: 200rpx;
  padding: 20rpx 0 0 20rpx;
}

.game-name {
  font-size: 16px;
  /* font-weight: bold; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.date {
  font-size: 14px;
  color: #aaa;
  position: absolute;
}

.loadMore {
  text-align: center;
  margin: 30px;
  color: #aaa;
  font-size: 16px
}

page {
  background-color: #fdfeff;
}